#include <iostream>
#include <vector>
using namespace std;

vector<int> PairSum(vector<int> array, int target)
{
    vector<int> answer;
    int i = 0;
    int j = array.size() - 1;

    while (i < j)
    {
        int Ps = array[i] + array[j];

        if (Ps > target)
        {
            j--;
        }
        else if (Ps < target)
        {
            i++;
        }
        else
        {
            answer.push_back(i);
            answer.push_back(j);
            return answer;
        }
    }

    return answer; // returns empty vector if no pair found
}

int main()
{
    cout << "Program about Pair Sum..." << endl;
    cout << "Better approach..." << endl;

    vector<int> array = {1, 2, 3, 4, 5, 9};
    int target = 30;

    vector<int> answer = PairSum(array, target);

    if (!answer.empty())
    {
        cout << "Indices of the given target: " << answer[0] << " , " << answer[1] << endl;
    }
    else
    {
        cout << "No pair found with the target sum." << endl;
    }

    return 0;
}