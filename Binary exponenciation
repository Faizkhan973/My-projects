#include <iostream>  
using namespace std;
int binaryExponentiation(int base, int  power)
{ 
  int result = 1;
  while(power> 0)
    {
       if(power & 1)
         {
           result = result* base ;
         }
         
       base = 1<<base ;  // multiplican
       power = power>>1;// division
    }

  return result;
}
int main()
{
    long long base, power;
    cout << "Enter base: ";
    cin >> base;
    cout << "Enter power: ";
    cin >> power;

    // Call the binary exponentiation function
    long long answer = binaryExponentiation(base, power);

    cout << base << "^" << power << " = " << answer << endl;

    return 0;
}