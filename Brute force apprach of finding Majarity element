#include<iostream>
#include<vector>
using namespace std;
int majority_element(vector<int>array)
{
    int n= array.size();
    for(int i =0 ; i < n ; i++)
    {
    int frequency= 0;
        for (int j=0; j < n; j++)
        {
            if (array[i] ==array[j])
            {
                frequency++;
            }
        }
        if(frequency>n/2)
    {
        return array[i] ;
    }


    }
    return -1;
    
}
int main()
{
    cout << "Brute force apprach of finding Majarity element.." << endl;
    vector< int > array = {2,1,1,3,1,4,1};
    int a = majority_element(array);
    cout << "Majority element  : "<< a<< endl;
    return 0;
}