#include<iostream>
#include<vector>
using namespace std;

void min_max(vector<int>& array )
    {
     int min=array[0];
     int max = array[0];
     for(int i =0 ; i < array.size(); i++)
       {
         if (array[i] < min)
           {
            min = array[i];
           }
         else 
           {
            max = array[i];
           }
       }
       cout << "Min element  " <<min<< endl;
       cout << "Max element  " << max<<endl;
    
    }
int main()
{ vector <int> array = {1, 2, 3, 4, 5, 6 , 7};
    min_max( array );
    cout << "Max and Min element in an array....." << endl;
    return 0;
}