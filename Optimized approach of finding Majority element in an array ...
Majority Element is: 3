#include<iostream>
#include<vector>
#include<algorithm>   // Required for sort()
using namespace std;

int Majarity_element(vector<int> array)
{
    // Step 1: Sort the array
    sort(array.begin(), array.end());

    // Step 2: Initialize variables
    int Frequency = 1;
    int answer = array[0];

    // Step 3: Traverse array
    for(int i = 1; i < array.size(); i++)
    {
        if(array[i] == array[i - 1])
        {
            Frequency++;
        }
        else
        {
            Frequency = 1;
            answer = array[i];
        }

        // Step 4: Check majority condition
        if(Frequency > array.size() / 2)
        {
            return answer;
        }
    }

    return -1;
}

int main()
{
    cout << "Optimized approach of finding Majority element in an array ..." << endl;

    vector<int> array = {1, 3, 3, 3, 3, 3, 8, 4, 5};

    int Majarity = Majarity_element(array);

    if(Majarity != -1)
    {
        cout << "Majority Element is: " << Majarity << endl;
    }
    else
    {
        cout << "No Majority Element found" << endl;
    }

    return 0;
}