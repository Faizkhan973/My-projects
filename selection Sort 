#include<iostream>
#include<vector>
using namespace std;

void Sort(vector<int>&array)
{
    int n=  array.size();
    for(int i= 0 ; i < n-1 ; i++)
    {
        int min_Index = i ;
        for(int j= i + 1 ; j <n ; j++)
        {
            if(array[j] < array[min_Index])
                min_Index   = j;
        }

        swap(array[i],array[min_Index] );
    }

}
int main()
{
    cout << "Selection Sort" << endl;
    vector<int> array= {4, 3, 2,1 };
    for(int i=0 ; i < array.size(); i++)
    {
        cout << array[i] <<" ";
    }
    cout << "" << endl;
    Sort(array );

    for(int i=0 ; i < array.size(); i++)
    {
        cout << array[i] <<" ";
    }
    return 0;
}