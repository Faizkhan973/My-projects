#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    double r, h;
    const double PI = 3.1415926535;

    cout << "Enter radius: ";
    cin >> r;
    cout << "Enter height: ";
    cin >> h;

    double area = 2 * PI * r * h + 2 * PI * r * r;
    double volume = PI * r * r * h;

    cout << fixed << setprecision(4);
    cout << "Surface Area = " << area << endl;
    cout << "Volume = " << volume << endl;

    return 0;
}